---
import site from '../../site-config.yaml';
import '../styles/global.css';
import { withBase } from '../utils/url';

interface Props {
	lang?: string;
}

const { lang = 'en' } = Astro.props;
const { project, colors } = site;
---
<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href={withBase('/favicon.svg')} />
		<link rel="icon" href={withBase('/favicon.ico')} />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={project.description} />
		<title>{project.name}</title>
	</head>
	<body class="bg-background text-body antialiased">
		<Fragment set:html={`<style>
			:root {
				--color-primary: ${colors.primary};
				--color-secondary: ${colors.secondary};
				--color-accent: ${colors.accent};
				--color-background: ${colors.background};
				--color-surface: ${colors.surface};
				--color-text: ${colors.text};
				--color-text-light: ${colors.textLight};
			}
		</style>`} />
		<slot />
		<script>
			// Arrow key / PageUp / PageDown navigation between sections and footer
			const snapTargets = () => Array.from(
				document.querySelectorAll<HTMLElement>('section[id], footer')
			);

			function currentIndex(): number {
				const list = snapTargets();
				const mid = window.innerHeight / 2;
				return list.reduce((best, el, i) => {
					const rect = el.getBoundingClientRect();
					const dist = Math.abs(rect.top + rect.height / 2 - mid);
					const bestRect = list[best].getBoundingClientRect();
					const bestDist = Math.abs(bestRect.top + bestRect.height / 2 - mid);
					return dist < bestDist ? i : best;
				}, 0);
			}

			function goTo(index: number) {
				const list = snapTargets();
				if (index < 0 || index >= list.length) return;
				list[index].scrollIntoView({ behavior: 'smooth' });
			}

			document.addEventListener('keydown', (e) => {
				// Only act when no interactive element has focus (screen reader safety)
				const active = document.activeElement;
				const isBody = !active || active === document.body || active === document.documentElement;
				if (!isBody) return;
				// Also skip when a dialog/lightbox is open
				if (document.querySelector('[role="dialog"]:not(.hidden)')) return;

				if (e.key === 'ArrowDown' || e.key === 'PageDown') {
					e.preventDefault();
					goTo(currentIndex() + 1);
				} else if (e.key === 'ArrowUp' || e.key === 'PageUp') {
					e.preventDefault();
					goTo(currentIndex() - 1);
				}
			});
		</script>
	</body>
</html>
