---
interface Props {
	member: {
		name: string;
		role: string;
		photo?: string;
		institution?: string;
		links?: {
			website?: string;
			email?: string;
			orcid?: string;
			scholar?: string;
		};
	};
}

const { member } = Astro.props;
const initials = member.name.split(' ').map((n: string) => n[0]).join('').slice(0, 2);
---
<div class="flex flex-col items-center text-center p-6">
	{member.photo ? (
		<img
			src={member.photo}
			alt={member.name}
			class="w-32 h-32 rounded-full object-cover mb-4 border-4 border-surface"
		/>
	) : (
		<div class="w-32 h-32 rounded-full mb-4 border-4 border-surface bg-primary/10 flex items-center justify-center">
			<span class="text-primary text-2xl font-bold">{initials}</span>
		</div>
	)}

	<h3 class="font-semibold text-lg text-body">{member.name}</h3>
	<p class="text-muted text-sm">{member.role}</p>
	{member.institution && (
		<p class="text-muted text-xs mt-1">{member.institution}</p>
	)}

	{member.links && (
		<div class="flex gap-3 mt-3">
			{member.links.email && (
				<a href={`mailto:${member.links.email}`} class="text-primary hover:text-accent transition-colors" aria-label="Email" title="Email">
					<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
					</svg>
				</a>
			)}
			{member.links.website && (
				<a href={member.links.website} class="text-primary hover:text-accent transition-colors" aria-label="Website" title="Website" target="_blank" rel="noopener noreferrer">
					<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
					</svg>
				</a>
			)}
			{member.links.orcid && (
				<a href={member.links.orcid} class="text-primary hover:text-accent transition-colors" aria-label="ORCID" title="ORCID" target="_blank" rel="noopener noreferrer">
					<svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
						<path d="M12 0C5.372 0 0 5.372 0 12s5.372 12 12 12 12-5.372 12-12S18.628 0 12 0zM7.369 4.378c.525 0 .947.431.947.947s-.422.947-.947.947a.95.95 0 01-.947-.947c0-.525.422-.947.947-.947zm-.722 3.038h1.444v10.041H6.647V7.416zm3.562 0h3.9c3.712 0 5.344 2.653 5.344 5.025 0 2.578-2.016 5.025-5.325 5.025h-3.919V7.416zm1.444 1.303v7.444h2.297c3.272 0 4.05-2.381 4.05-3.713 0-1.822-1.166-3.731-3.9-3.731h-2.447z"/>
					</svg>
				</a>
			)}
			{member.links.scholar && (
				<a href={member.links.scholar} class="text-primary hover:text-accent transition-colors" aria-label="Google Scholar" title="Google Scholar" target="_blank" rel="noopener noreferrer">
					<svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
						<path d="M5.242 13.769L0 9.5 12 0l12 9.5-5.242 4.269C17.548 11.249 14.978 9.5 12 9.5c-2.977 0-5.548 1.748-6.758 4.269zM12 10a7 7 0 100 14 7 7 0 000-14z"/>
					</svg>
				</a>
			)}
		</div>
	)}
</div>
