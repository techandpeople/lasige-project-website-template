---
interface Props {
	id: string;
	title: string;
	background?: 'default' | 'surface';
}

const { id, title, background = 'default' } = Astro.props;
---
<section id={id} class:list={["py-20", background === 'surface' ? "bg-surface" : ""]}>
	<div class="max-w-3xl mx-auto px-4">
		<h2 class="text-3xl md:text-4xl font-bold text-primary mb-12 text-center">
			{title}
		</h2>
		<div class="prose prose-lg max-w-none">
			<slot />
		</div>
	</div>
</section>

<style is:global>
	.prose {
		color: var(--color-text);
		line-height: 1.75;
	}
	.prose p {
		margin-bottom: 1.25em;
	}
	.prose h3 {
		color: var(--color-primary);
		font-size: 1.25rem;
		font-weight: 700;
		margin-top: 2em;
		margin-bottom: 0.75em;
	}
	.prose h4 {
		color: var(--color-primary);
		font-size: 1.125rem;
		font-weight: 600;
		margin-top: 1.5em;
		margin-bottom: 0.5em;
	}
	.prose strong {
		font-weight: 700;
	}
	.prose a {
		color: var(--color-accent);
		text-decoration: underline;
	}
	.prose a:hover {
		opacity: 0.8;
	}
	.prose ul, .prose ol {
		padding-left: 1.5em;
		margin-bottom: 1.25em;
	}
	.prose ul {
		list-style-type: disc;
	}
	.prose ol {
		list-style-type: decimal;
	}
	.prose li {
		margin-bottom: 0.5em;
	}
	.prose blockquote {
		border-left: 4px solid var(--color-primary);
		padding-left: 1em;
		margin-left: 0;
		color: var(--color-text-light);
		font-style: italic;
	}
	.prose img {
		border-radius: 0.5rem;
		margin: 1.5em 0;
	}
	.prose hr {
		border-top: 1px solid var(--color-surface);
		margin: 2em 0;
	}
</style>
